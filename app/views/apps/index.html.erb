<div class="container">
  <div class="row">
    <div class="span12">
      <h1>Projects</h1>
      <ul class="thumbnails">

        <% @apps.each do |app|
        u=app.user
        %>
            <li class="span3">
              <div class="thumbnail">
                <h3><%= app.name %></h3>
                Created by  <%= gravatar_image_tag(u.email, :title => u.username, :gravatar => {:default=> :identicon, :size => 20}) %>

                <center><%= link_to "Participate", app_path(app), :class=>"btn btn-primary" %></center>
                <hr/>
                <p><small>admin:
                <% if current_or_guest_user==app.user %>
                    <%= link_to 'Delete', app, confirm: 'Are you sure?', method: :delete, :class=>"btn btn-mini btn-danger" %>
                    <%= link_to 'Modify', edit_app_path(app), :class=>"btn btn-mini btn-primary" %>
                <% else %>
                    <button class="btn btn-mini disabled">Delete</button>
                    <button class="btn btn-mini disabled">Modify</button>
                <% end %>
                    </small></p>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
