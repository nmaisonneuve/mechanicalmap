<!-- Navbar
    ================================================== -->
<div id="wrapper" style="background: #cccccc">
  <div id="map" style="width:100%;height:500px;padding: 0;margin: 0;z-index:2"></div>
  <div class="navbar" style="margin: 0;padding: 0">
    <div class="navbar-inner">
      <div class="container">

        <ul class="nav">
          <li class="">
            <form accept-charset="UTF-8" action="" class="edit_task navbar-form pull-left" data-remote="true" data-type="json" id="submit_task" method="post">
              <input id="task_answer" name="task[answer]" type="hidden"/>
              <input class="btn btn-primary" data-disable-with="Saving..." name="commit" type="submit" value="Submit"/>
            </form>
          </li>
          <li class=""><a id='skip_task' href="./scaffolding.html">Next area</a></li>
          <li class="divider-vertical"></li>
          <li class="navbar-search">
            <div style="font-size: smaller;"><b>123</b> / 250 tasks completed</div>
            <div class="progress" style="width:100%;height: 10px">
              <div class="bar" style="width: 30%;"></div>
            </div>
          </li>
          <li class="divider-vertical"></li>
          <li class="">
            <a href="#" id="about_button">About</a>
          </li>

        </ul>
        <ul class="nav pull-right">
          <li class="navbar-search">
            <div class="navbar-search" style="font-size: smaller;"><%= current_or_guest_user.username[0..9] %></div>
          </li>
        </ul>

      </div>

    </div>
  </div>
  <div class="modal hide" id="about_info" style="position:relative;width:440px;">
    <div class="modal-body">
      <h4><%= @app.name %></h4>
      <br/>
      <p>Your mission is to click on all the buildings/areas that look <b>salient or atypic</b> in the
        delimited aera.
        <a href="<%= app_url(@app) %>">More information and data access.</a></p>
      <div style="text-align: center">
        <a href="#" class="btn btn-primary" data-dismiss="modal">Start</a>
      </div>
      <hr/>
      <div style="font-size: smaller">This is a micro-tasking demo project generated by the 'mechanical map' framework.
        Create or remix micro-task templates to build on the fly your own crowdmapping project.
      </div>
    </div>
  </div>
</div>


