<script type="text/javascript">
    // Global variables

    var ft_table="1L7eUdUevLvkK3OaXyfD66G21NK6RpOZVG-7R_50"; //<%= @app.input_ft %>";

    $(function() {

        var scheduler_url = "<%= workflow_app_url(@app) %>";
        var micro_task = new MicroTask(scheduler_url,ft_table);
        micro_task.start();

        $("#about_button").click(function(event) {
            event.preventDefault();
            $("#about_info").modal({backdrop:false});
        });
        $("#about_info").modal({backdrop:false});
    });
</script>