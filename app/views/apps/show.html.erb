<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>


<script type="text/javascript">
    // Global variables
    var map;
    var G = google.maps;

    function create_area(lat_sw, lng_sw, lat_ne, lng_ne, color, url) {
        var bounds = new google.maps.LatLngBounds(
                new G.LatLng(lat_sw, lng_sw),
                new G.LatLng(lat_ne, lng_ne));

        var rectangle = new google.maps.Rectangle({
            map: map,
            bounds: bounds,
            fillColor:color,
            fillOpacity:0.7,
            strokeWeight:1,
            strokeColor:"#000000",
            url:url
        });

        google.maps.event.addListener(rectangle, 'click', function() {
            window.location.href = rectangle.url;
        });
    }

    /**
     * Called on the initial page load.
     */
    function init() {

        map = new google.maps.Map(document.getElementById('map'), {
            'zoom': 3,
            'center': new google.maps.LatLng(70, 0),
            'mapTypeId': google.maps.MapTypeId.SATELLITE
        });

       // add_wms_url(, "toto");


        var bounds = new google.maps.LatLngBounds(
                new G.LatLng(<%= @app.lat_sw %>, <%= @app.lng_sw %>),
                new G.LatLng(<%= @app.lat_ne %>, <%= @app.lng_ne %>));

        map.fitBounds(bounds);

    <% @app.areas.each { |area|
        completed,size=area.completion
        completion=completed.to_f/size.to_f
        color=Color::HSL.new(completion*120,50,50).html
    %>
        create_area(<%= area.lat_sw %>, <%= area.lng_sw %>, <%= area.lat_ne %>, <%= area.lng_ne %>, "<%= color %>", "<%= getjob_app_area_path(area.app, area) %>");
    <%} %>


    }
    $(function() {
        init();
    });
    // Register an event listener to fire when the page finishes loading.
</script>

<div class="container">
  <div class="row">
    <div class="span3">
      <p id="notice"><%= notice %></p>

      <h2><%= @app.name %></h2>


      <% completed, size=@app.completion%>
      <b>app completeness:</b>
      <div class="progress progress-info  progress-striped">
        <div class="bar"  style="width: <%= completed.to_f/size.to_f*100 %>%;"></div>

      </div>
      <button class="btn btn-primary btn-large" onclick="window.location.href='<%= getjob_app_path(@app) %>'" <%= (@available_tasks) ? "" : "disabled" %>>Participate</button>
      <br/></br>
      <h4>Open data <small>analyze yourself the data</small></h4>
       <p>
      The raw data are regularily updated and published on the google fusion table service. You can analyze and
      aggregate them yourself.
         </p>
      <br/>
      <a href="http://www.google.com/fusiontables/DataSource?docid=<%= @app.ft_id %>"> >> Link to Data</a>
    </div>

    <div class="span9">
      Spatial completeness
      <div id="map" style="height:500px"></div>
    </div>

  </div>
</div>
