<% header = capture do %>
  <ul class="nav">
    <li> <a href="/apps">Explore apps</a></li>
    <li> <%= link_to @app.name[0..20], app_path(@app) %></li>
    <li class="active"><%= link_to "Source code", source_app_path(@app) %></li>
    <li> <a href="https://gist.github.com/<%= @app.gist_id %>" target="_blank" class="">Gist History</a></li>
  </ul>

  <%= form_for(@app, :url => {:action => "source_update"}, :html => {:id => "form_app"}, :remote => true) do |f| %>
    <input type="hidden" name="app[script]" id="app_script" value=""/>
    <div class="nav">
      <button class="btn btn-primary" data-disable-with="Saving..."
              id="update"> Save
      </button>
    </div>
  <% end %>
<% end %>

<% content_for :menu_header, header %>

<style type="text/css" media="screen">

      form{
        margin:0px;
      }
      #editor {
          margin: 0;
          top: 40px;
          bottom: 0;
          left: 0;
          right: 0;
      }
  </style>




    <div id="editor"><%= @app.script %></div>



<%= javascript_include_tag "application" %>
<!--<script  src="/assets/ace/ace-noconflict.js" type="text/javascript" charset="utf-8"></script>-->
<script type='text/javascript' src='/assets/ace/ace.js' charset='utf-8' ></script>
<script type='text/javascript' src='/assets/ace/mode-html.js' charset='utf-8' ></script>
<script type='text/javascript' src='/assets/ace/theme-twilight.js' charset='utf-8' ></script>
<script type="text/javascript">
    // Global variables
    var editor;


    // Register an event listener to fire when the page finishes loading.
    $(function () {
      var code_changed = false;

      $("#form_app").submit(function () {
            var text = editor.getSession().getValue();
            $("#app_script").val(text);
            code_changed = false;
            $("#update").attr("disable",true);
            return true;
      });


        editor = ace.edit("editor");
        editor.setTheme("ace/theme/twilight");
        var Mode = require("ace/mode/html").Mode;
        editor.getSession().setMode(new Mode());
        editor.getSession().setUseSoftTabs(true);
        editor.getSession().setTabSize(2);
        var text = editor.getSession().on('change', function(){
        code_changed = true;
        $("#update").attr("disable","false");
        });

      (function(){
        // do some stuff
        if (code_changed){
          $("#form_app").submit();
        }
        setTimeout(arguments.callee, 60000);
      })();
        // editor.getSession().setMode("ace/mode/html");

    });
</script>


