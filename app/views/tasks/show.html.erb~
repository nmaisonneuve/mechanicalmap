<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

<style type="text/css">
    #map {
        width: 100%;
        height: 500px;
    }
</style>
<script type="text/javascript">
    // Global variables
    var map;

    // Gets the application name and gets all its tasks
    function submit_answer(answer) {
        $("#task_answer").val(answer);
        $('#edit_task').submit();
    }

    function create_area(lat_sw, lng_sw, lat_ne, lng_ne) {
        var bounds = new google.maps.LatLngBounds(
                new google.maps.LatLng(lat_sw, lng_sw),
                new google.maps.LatLng(lat_ne, lng_ne));

        map.fitBounds(bounds);

        rectangle = new google.maps.Rectangle({
            map: map,
            bounds:bounds,
            strokeColor:"#FF0000",
            fillOpacity:0
        });
        google.maps.event.addListener(rectangle, 'click', function(event) {
        });
    }


    $(function() {
        map = new google.maps.Map(document.getElementById('map'), {
            'zoom': 3,
            'center': new google.maps.LatLng(70, 0),
            'mapTypeId': google.maps.MapTypeId.SATELLITE
        });

        create_area(<%= @task.area.lat_sw %>, <%= @task.area.lng_sw %>, <%= @task.area.lat_ne %>, <%= @task.area.lng_ne %>);
    });

</script>


<div class="container">
  <div class="row">
    <div class="span9">
      <div id="map"></div>
    </div>
    <div class="span3">
      <p>Task: <span id="task-id" class="label label-warning"><%= @task.id %></span></p>

      <% completed, size=@area.completion %>

      <b>Area completeness</b> (<%= completed %>/<%= size %>)
      <div class="progress progress-info
     progress-striped">
        <div class="bar"
             style="width: <%= (completed.to_f/size.to_f)*100 %>%;"></div>
      </div>



      <% if @contributable %>
          <h3>Instructions</h3>
          <%= form_for [@project, @area, @task], :html => {:id => "submit_task"} do |f| %>
              <%= f.hidden_field :answer %>
              <%= f.hidden_field :user %>
              <%= raw RedCloth.new(@task.area.project.description).to_html %>              
	      <button class="btn " onclick="window.location.href='<%= next_project_area_path(@project, @area) %>'">Skip Task</button>
          <% end %>
      <% else %>
      You have already contributed to this area.
      <button class="btn " onclick="window.location.href='<%= next_project_area_path(@project, @area) %>'">Skip Task</button>
      <% end %>
      <br/>

      <button class="btn " onclick="window.location.href='<%= project_path(@project) %>'">Project Summary</button>


    </div>
  </div>
</div>






