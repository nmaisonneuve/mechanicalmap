<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<style type="text/css">
    #map {
        width: 100%;
        height: 500px;
    }
</style>
<script type="text/javascript">
    // Global variables
    var map;

    /**
     * Called on the initial page load.
     */
    function init() {

        map = new google.maps.Map(document.getElementById('map'), {
            'zoom': 3,
            'center': new google.maps.LatLng(70, 0),
            'mapTypeId': google.maps.MapTypeId.SATELLITE
        });

        var bounds = new google.maps.LatLngBounds(
                new google.maps.LatLng(<%= @task.area.lat_sw %>, <%= @task.area.lng_sw %>),
                new google.maps.LatLng(<%= @task.area.lat_ne %>, <%= @task.area.lng_ne %>));

        map.fitBounds(bounds);

        var rectangle = new google.maps.Rectangle({
            map: map,
            bounds:bounds,
            strokeColor:"#FF0000",
            fillOpacity:0

        });

        google.maps.event.addListener(rectangle, 'click', function(event) {
        });


    }


    // Register an event listener to fire when the page finishes loading.
    google.maps.event.addDomListener(window, 'load', init);
</script>


<div id="map"></div>


<%= link_to "complete", project_area_task_path(@project,@area,@task), :method => :put %>
<%= link_to "Skip", next_project_area_path(@project,@area) %>
<%= link_to "Status", project_path(@project) %>


