<h2>Create an account / <small><%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name), :class=>"btn" %><br />
<% end -%></small></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-vertical"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="control-group">
      <%= f.label :username, :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :username, :class=>"input" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :email, :class=>"control-label" %>
      <div class="control">
        <%= f.email_field :email %></div>
    </div>
    <div class="control-group">
      <div><%= f.label :password, :class=>"control-label" %>
        <div class="control">
          <%= f.password_field :password %></div>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password_confirmation, :class=>"control-label" %>
      <div class="control">
        <%= f.password_field :password_confirmation %></div>
    </div>

    <div><%= f.submit "Sign up" %></div>

    <!--
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
    -->
<% end %>


